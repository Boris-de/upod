<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_item_height"
    android:background="?navDrawerItemBackground"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1">

    <mobi.upod.android.widget.TintableImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        app:viewTint="@color/navigation_icon_color_selector"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@+id/counter"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textAppearance="@style/TextAppearance.List.PrimaryText"
        android:textColor="@color/navigation_primary_text_color_selector"
        android:paddingRight="@dimen/nav_item_padding_left"
        android:text="Subscriptions"/>

    <TextView
        android:id="@+id/counter"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        style="@style/Counter.Navigation"/>
</RelativeLayout>