<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget"/>

    <!-- progress bar -->
    <style name="Widget.ProgressBar.Horizontal.Paddingless" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">@dimen/progress_bar_size</item>
        <item name="android:maxHeight">@dimen/progress_bar_size</item>
    </style>
    <style name="Widget.ProgressBar.Vertical.Paddingless" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minWidth">@dimen/progress_bar_size</item>
        <item name="android:maxWidth">@dimen/progress_bar_size</item>
    </style>
    <style name="Widget.ProgressBar.Horizontal.Transparent" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_transparent</item>
    </style>

    <!-- counter -->
    <style name="Counter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:background">@drawable/counter</item>
    </style>
    <style name="Counter.Navigation">
        <item name="android:background">@drawable/nav_item_counter_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- action button -->
    <style name="ActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <!-- borderless action button list -->
    <style name="ActionListButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearance</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/space_medium</item>
    </style>

    <!-- highlight button -->
    <style name="HighlightButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:textAppearance">?textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <!-- media control -->
    <style name="MediaButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
    <style name="MediaButton.Large">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="MediaButton.Large.StandardIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MediaButton.ExtraLarge" parent="MediaButton.Large.StandardIcon">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="TextOverlay.Title">
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
    </style>
    <style name="TextOverlay.Title.Large">
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
    </style>

    <!-- show case -->
    <style name="ShowcaseViewBase">
        <item name="sv_showcaseColor">@color/primary</item>
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>

        <item name="sv_buttonText">@string/got_it</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_buttonBackgroundColor">@color/primary</item>
    </style>
    <style name="ShowcaseView" parent="ShowcaseViewBase">
        <item name="sv_backgroundColor">#3333B5E5</item>
    </style>

    <!-- card -->
    <style name="Card" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="CardBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Subhead</item>
    </style>
    <style name="CardDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="CardButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="CardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:minWidth">@dimen/touchable</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="CardButton.Primary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>