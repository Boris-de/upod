<?xml version="1.0" encoding="utf-8"?>

<mobi.upod.android.widget.MaxSquareFrameByWidthLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/keyline_episode_list_item_title"
    android:layout_marginRight="@dimen/keyline_episode_list_item_title"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/podcastImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:background="@drawable/podcast_image_background_large"/>
</mobi.upod.android.widget.MaxSquareFrameByWidthLayout>
